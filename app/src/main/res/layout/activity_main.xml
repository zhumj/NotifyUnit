<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btnStartNotify"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/shape_"
            android:textColor="@android:color/white"
            android:onClick="startNotify"
            android:textAllCaps="false"
            android:gravity="center"
            android:textStyle="bold"
            android:text="启动通知"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnCloseNotify"/>

    <Button
            android:id="@+id/btnCloseNotify"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_"
            android:textColor="@android:color/white"
            android:onClick="closeNotify"
            android:textAllCaps="false"
            android:gravity="center"
            android:textStyle="bold"
            android:text="关闭通知"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/btnStartNotify"
            app:layout_constraintBottom_toBottomOf="@+id/btnStartNotify"
            app:layout_constraintLeft_toRightOf="@+id/btnStartNotify"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>